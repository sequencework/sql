{
  "name": "@sequencework/sql",
  "version": "1.0.1",
  "main": "sql.js",
  "types": "sql.d.ts",
  "license": "MIT",
  "description": "Javascript tag to format SQL template literals",
  "keywords": [
    "sql",
    "template-literals",
    "node-postgres",
    "pg"
  ],
  "files": [
    "sql.js",
    "sql.d.ts",
    "pg.js",
    "pg.d.ts"
  ],
  "scripts": {
    "build": "tsc && cp -r build/. ./ && rm -rf build",
    "clean": "rm pg.js sql.js pg.d.ts sql.d.ts 2> /dev/null",
    "test": "jest",
    "prettier": "prettier --write '**/*.{js,json,css,md}' --ignore-path .gitignore",
    "lint": "eslint '**/*.js' --ignore-path .gitignore"
  },
  "devDependencies": {
    "@sequencework/eslint-config": "^0.0.7",
    "@types/jest": "^23.3.2",
    "dtslint": "^0.3.0",
    "eslint": "5.4.0",
    "husky": "1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "@sequencework"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
